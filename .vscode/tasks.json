{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build:webpack",
      "type": "npm",
      "script": "build",
      "problemMatcher": []
    },
    {
      "label": "build:webpack:debug",
      "type": "npm",
      "script": "build:debug",
      "problemMatcher": []
    },
    {
      "label": "watch:webpack",
      "type": "npm",
      "script": "watch",
      "problemMatcher": "$ts-webpack-watch",
      "isBackground": true,
      "presentation": {
        "reveal": "never",
        "group": "watchers"
