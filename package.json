{
  "name": "esp-exception-decoder",
  "displayName": "ESP Exception Decoder",
  "version": "1.1.1",
  "private": true,
  "description": "ESP8266/ESP32 Exception Decoder Extension for the Arduino IDE",
  "categories": [
    "Other"
  ],
  "keywords": [
    "arduino",
    "arduino-cli",
    "boardlab",
    "vscode",
    "embedded-debugging",
    "esp32",
    "esp8266",
    "exception-decoder",
    "stacktrace",
    "coredump",
    "microcontroller"
  ],
  "bugs": {
    "url": "https://github.com/dankeboy36/esp-exception-decoder/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dankeboy36/esp-exception-decoder.git"
  },
  "license": "MIT",
  "author": "dankeboy36",
  "publisher": "dankeboy36",
  "main": "./dist/extension.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "webpack --mode production --devtool hidden-source-map",
    "clean": "rimraf dist out *.vsix",
    "compile": "webpack && vsce package",
    "compile-tests": "tsc -p . --outDir out",
    "format": "prettier --write .",
    "lint": "eslint src --ext ts",
    "prepackage": "npm run build",
    "package": "vsce package",
    "release": "semantic-release",
    "pretest": "npm run compile-tests && npm run compile",
    "test": "node ./out/test/runTest.js",
    "watch": "webpack --watch",
    "watch-tests": "tsc -p . -w --outDir out"
  },
  "contributes": {
    "commands": [
      {
        "command": "espExceptionDecoder.showTerminal",
        "title": "Show Decoder Terminal",
        "category": "ESP Exception Decoder"
      }
    ]
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "dependencies": {
    "debug": "^4.4.3",
    "fqbn": "^1.3.1",
    "trbr": "^0.1.24"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.0",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@types/debug": "^4.1.12",
    "@types/glob": "^9.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/temp": "^0.9.1",
    "@types/vscode": "^1.78.0",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.2",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.1",
    "glob": "^11.0.3",
    "mocha": "^11.7.4",
    "neostandard": "^0.12.2",
    "nyc": "^17.1.0",
    "prettier": "^3.6.2",
    "prettier-plugin-jsdoc": "^1.3.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-packagejson": "^2.5.18",
    "rimraf": "^6.0.1",
    "semantic-release": "^25.0.0",
    "semantic-release-vsce": "^6.0.12",
    "temp": "^0.9.4",
    "ts-loader": "^9.5.4",
    "typescript": "^5.0.4",
    "vscode-arduino-api": "^0.2.1",
    "webpack": "^5.81.0",
    "webpack-cli": "^5.0.2"
  },
  "extensionDependencies": [
    "dankeboy36.boardlab"
  ],
  "engines": {
    "vscode": "^1.78.0"
  }
}
